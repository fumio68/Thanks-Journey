<div class="user-form-wrapper">
  <div class="form-sheet mt-5 p-5">
    <h2 class="form-title mb-4">Sign In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field form-group">
        <%= f.label :email, class:"form-text" %><br />
        <%= f.email_field :email,class:"form-control", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field form-group">
        <%= f.label :password, class:"form-text" %><br />
        <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "OK", class:"btn px-4 mt-4 form-btn"  %>
      </div>
    <% end %>

    <%= image_tag 'sign-in.png', class:"form-img form-img--compass" %>
  </div>
</div>
